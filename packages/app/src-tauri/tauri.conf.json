{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Firefly",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "clipboard": {
        "all": true
      },
      "dialog": {
        "all": false,
        "message": true
      },
      "fs": {
        "all": false,
        "readDir": true,
        "readFile": true,
        "scope": [
          "$APPCONFIG/*",
          "$RESOURCE/*"
        ],
        "writeFile": true
      },
      "globalShortcut": {
        "all": true
      },
      "http": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": [
          "xdotool"
        ]
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.firefly.best",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/*"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        },
        "wix": {
          "language": ["zh-CN", "en-US"]
        }
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/icon.ico"
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/chenyueban/firefly/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc5QTE2QTlENTQ2NTdEQTAKUldTZ2ZXVlVuV3FoZVFDalBqS0ZjRWxwSTZOakxsSUlUUFVkck1JdTF4Y0hFWWN4U21scks5cnIK"
    },
    "windows": [
      {
        "center": true,
        "fullscreen": false,
        "height": 900,
        "hiddenTitle": true,
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "title": "Firefly",
        "titleBarStyle": "Overlay",
        "width": 1080
      },
      {
        "center": true,
        "decorations": false,
        "focus": false,
        "fullscreen": false,
        "height": 284,
        "hiddenTitle": true,
        "resizable": false,
        "title": "Firefly Assistant",
        "titleBarStyle": "Overlay",
        "label": "assistant",
        "url": "assistant.html",
        "visible": false,
        "width": 600
      }
    ]
  }
}
