{
  "name": "firefly",
  "version": "0.7.0",
  "private": true,
  "description": "An open-source lightweight OpenAI powered memo hub.",
  "author": "chenyueban <jasonchan0527@gmail.com>",
  "main": "dist-electron/main.js",
  "scripts": {
    "postinstall": "nuxi prepare",
    "typecheck": "vue-tsc --noEmit",
    "prebuild": "rimraf dist",
    "build": "node --max_old_space_size=16384 ./node_modules/nuxt/bin/nuxt.mjs build",
    "dev": "nuxi dev --port 5173",
    "dev:pwa": "cross-env VITE_PLUGIN_PWA=true nuxi dev --port 5173",
    "start": "node .output/server/index.mjs",
    "start:generate": "npx serve .output/public",
    "generate": "node --max_old_space_size=16384 ./node_modules/nuxt/bin/nuxt.mjs generate",
    "dev:desktop": "cross-env ELECTRON=true nuxi dev",
    "build:desktop": "cross-env ELECTRON=true nuxi build --prerender && electron-builder --publish never"
  },
  "dependencies": {
    "@chenyueban/robot": "^0.0.2",
    "@firefly/common": "workspace:*",
    "@firefly/editor": "workspace:*",
    "@firefly/theme": "workspace:*",
    "@sentry/electron": "^4.6.0",
    "@vercel/analytics": "^1.0.1",
    "@yeger/vue-masonry-wall": "^4.0.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "mark.js": "^8.11.1",
    "vue-virtual-scroller": "2.0.0-beta.8"
  },
  "devDependencies": {
    "@nuxt/devtools": "^0.6.1",
    "@nuxtjs/i18n": "8.0.0-beta.12",
    "@pinia/nuxt": "^0.4.11",
    "@types/crypto-js": "^4.1.1",
    "@types/js-base64": "^3.3.1",
    "@types/mark.js": "^8.11.8",
    "@types/vue-virtual-scroller": "npm:@vsme/vue-virtual-scroller@^1.0.1",
    "@unocss/nuxt": "^0.53.1",
    "@vite-pwa/nuxt": "^0.1.0",
    "@vue-macros/nuxt": "^1.3.12",
    "@vueuse/nuxt": "^10.2.0",
    "electron": "^25.1.1",
    "electron-builder": "^24.4.0",
    "electron-rebuild": "^3.2.9",
    "nuxt": "^3.5.3",
    "nuxt-electron": "^0.5.0",
    "nuxt-gtag": "^0.5.7",
    "vite-plugin-electron": "^0.12.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
